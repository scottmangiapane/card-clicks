<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_dimen_screen_border"
    android:paddingRight="@dimen/activity_dimen_screen_border"
    tools:context=".HelpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:textStyle="bold" />

    <TextView
        style="@android:style/TextAppearance.Holo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_dimen_small"
        android:text="@string/instructions_long" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_dimen">

        <TextView
            android:id="@+id/text_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/example"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@mipmap/ic_refresh_white_24dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_dimen_small"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/help_card_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_dimen_extra_small"
            android:layout_marginLeft="@dimen/activity_dimen_extra_small"
            android:layout_marginRight="@dimen/activity_dimen_extra_small"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/card_empty" />

        <ImageView
            android:id="@+id/help_card_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_dimen_extra_small"
            android:layout_marginLeft="@dimen/activity_dimen_extra_small"
            android:layout_marginRight="@dimen/activity_dimen_extra_small"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/card_empty" />

        <ImageView
            android:id="@+id/help_card_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_dimen_extra_small"
            android:layout_marginLeft="@dimen/activity_dimen_extra_small"
            android:layout_marginRight="@dimen/activity_dimen_extra_small"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/card_empty" />
    </LinearLayout>

    <TextView
        android:id="@+id/button_return_to_menu"
        style="@android:style/TextAppearance.Holo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_dimen"
        android:background="@color/red"
        android:gravity="center"
        android:padding="@dimen/activity_dimen"
        android:text="@string/return_to_menu"
        android:textStyle="bold" />
</LinearLayout>
